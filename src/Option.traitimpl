public:	
	template<typename R>
	Option<R> map(std::function<R (T)> func)
	{
		if (is_some()) 
		{
			return Option<R>::Some(func(_content));
		}
		return Option<R>::None();
	}

	template<typename R>
	Option<R> map_flat(std::function<Option<R>(T)> func)
	{
		if (is_some())
		{
			return func(_content);
		}
		return Option<R>::None();
	}